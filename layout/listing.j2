{% extends "base.j2" %}

{% block extracss %}
    <link rel="stylesheet" href="{{ media_url('css/listings.css') }}">
{% endblock extracss %}

{% from "macros.j2" import render_excerpt with context  %}
{% block main %}
{% block page_title %}<h2 class="title">{{ resource.meta.title }}</h2>{% endblock %}

<ul class="listing">
{% for res in resource.node.walk_resources_sorted_by_time() %}
<li>
    {{ render_excerpt(res) }}
</li>
{% endfor %}
</ul>
{% endblock %}
